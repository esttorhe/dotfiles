# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt - g: yabai -m display --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to labeled spaces
shift + alt - 1 : yabai -m window --space dev;
shift + alt - 2 : yabai -m window --space discord;
shift + alt - 3 : yabai -m window --space telegram;
shift + alt - 4 : yabai -m window --space whatsapp;
shift + alt - 5 : yabai -m window --space notion;
shift + alt - 6 : yabai -m window --space calendar;
shift + alt - 7 : yabai -m window --space asana;
shift + alt - 8 : yabai -m window --space zen;
shift + alt - 9 : yabai -m window --space spotify;
shift + alt - 0 : yabai -m window --space slack;

# flash active window (moved to different key since 0 is now used for slack)
shift + alt - f : yabai -m window --opacity 0.1 && sleep $(yabai -m config window_opacity_duration) && yabai -m window --opacity 0.0

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

# workspace setup hotkeys
# setup workspace for single display (laptop only)
shift + alt + cmd - 1 : ~/.config/yabai/scripts/yabai-workspace-setup.sh single

# setup workspace for dual display (laptop + 1 external)
shift + alt + cmd - 2 : ~/.config/yabai/scripts/yabai-workspace-setup.sh dual

# setup workspace for triple display (laptop + 2 external)
shift + alt + cmd - 3 : ~/.config/yabai/scripts/yabai-workspace-setup.sh triple

# focus specific labeled workspaces
ctrl + cmd - 1 : yabai -m space --focus dev
ctrl + cmd - 2 : yabai -m space --focus discord
ctrl + cmd - 3 : yabai -m space --focus telegram
ctrl + cmd - 4 : yabai -m space --focus whatsapp
ctrl + cmd - 5 : yabai -m space --focus notion
ctrl + cmd - 6 : yabai -m space --focus calendar
ctrl + cmd - 7 : yabai -m space --focus asana
ctrl + cmd - 8 : yabai -m space --focus zen
ctrl + cmd - 9 : yabai -m space --focus spotify
ctrl + cmd - 0 : yabai -m space --focus slack

